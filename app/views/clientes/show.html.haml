- model_class = Cliente
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @cliente.nome
%p
  %strong= model_class.human_attribute_name(:telefone) + ':'
  %br
  = @cliente.telefone
%p
  %strong= model_class.human_attribute_name(:endereco) + ':'
  %br
  = @cliente.endereco
%p
  %strong= model_class.human_attribute_name(:cpf) + ':'
  %br
  = @cliente.cpf


= link_to t('.back', :default => t("helpers.links.back")), clientes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_cliente_path(@cliente), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), cliente_path(@cliente), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
