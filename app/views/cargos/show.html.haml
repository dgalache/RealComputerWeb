- model_class = Cargo
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:tipo) + ':'
  %br
  = @cargo.tipo
%p
  %strong= model_class.human_attribute_name(:salario) + ':'
  %br
  = @cargo.salario


= link_to t('.back', :default => t("helpers.links.back")), cargos_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_cargo_path(@cargo), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), cargo_path(@cargo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
