= simple_form_for @cargo, :html => { :class => 'form-horizontal' } do |f|
  = f.input :tipo
  = f.error_span :tipo
  = f.input :salario
  = f.error_span :salario
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), cargos_path, :class => 'btn btn-default'
