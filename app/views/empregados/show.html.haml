- model_class = Empregado
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @empregado.nome
%p
  %strong= model_class.human_attribute_name(:telefone) + ':'
  %br
  = @empregado.telefone
%p
  %strong= model_class.human_attribute_name(:endereco) + ':'
  %br
  = @empregado.endereco
%p
  %strong= model_class.human_attribute_name(:dataadm) + ':'
  %br
  = @empregado.dataadm
%p
  %strong= model_class.human_attribute_name(:cpf) + ':'
  %br
  = @empregado.cpf
%p
  %strong= model_class.human_attribute_name(:rg) + ':'
  %br
  = @empregado.rg
%p
  %strong= model_class.human_attribute_name(:cargo_id) + ':'
  %br
  = @empregado.cargo_id


= link_to t('.back', :default => t("helpers.links.back")), empregados_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_empregado_path(@empregado), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), empregado_path(@empregado), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
