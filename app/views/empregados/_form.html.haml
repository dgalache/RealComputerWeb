= simple_form_for @empregado, :html => { :class => 'form-horizontal' } do |f|
  = f.input :nome
  = f.error_span :nome
  = f.input :telefone
  = f.error_span :telefone
  = f.input :endereco
  = f.error_span :endereco
  = f.input :dataadm
  = f.error_span :dataadm
  = f.input :cpf
  = f.error_span :cpf
  = f.input :rg
  = f.error_span :rg
  = f.input :cargo_id
  = f.error_span :cargo_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), empregados_path, :class => 'btn btn-default'
