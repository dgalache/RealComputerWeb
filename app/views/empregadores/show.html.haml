- model_class = Empregador
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @empregador.nome
%p
  %strong= model_class.human_attribute_name(:telefone) + ':'
  %br
  = @empregador.telefone
%p
  %strong= model_class.human_attribute_name(:endereco) + ':'
  %br
  = @empregador.endereco
%p
  %strong= model_class.human_attribute_name(:cnpj) + ':'
  %br
  = @empregador.cnpj


= link_to t('.back', :default => t("helpers.links.back")), empregadores_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_empregador_path(@empregador), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), empregador_path(@empregador), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
